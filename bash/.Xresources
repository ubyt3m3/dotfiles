! ==============================
! Urxvt
! ==============================
URxvt*terminalName: rxvt-unicode-256color
URxvt*depth: 32
URxvt*borderLess: false
URxvt*tintColor: #FFFAF0
URxvt*inheritPixmap: true

!! preferences
URxvt*loginShell: true
URxvt*imLocale: ja_JP.utf-8
URxvt*saveLines: 12000
URxvt*transparent: true
URxvt*shading: 20
! fade text n% upon unfocus
URxvt*fading: 20
URxvt*visualBell: true
! darken=(0 to 100) lighten=(-1 to -100)
!URxvt*shading: 30
! tint background with this color
!URxvt*tintColor: black

!! scroll
! Do not scroll with output
URxvt*scrollBar: false
URxvt*scrollBar_right: false
! Scroll to the bottom when non-special keys are pressed
URxvt*scrollTtyKeypress: true
! Do not scroll with scrollback buffer when tty recieves new lines, adds some speed.
URxvt*scrollWithBuffer: false
URxvt*skipScroll: true

!! cursor preferences
URxvt*cursorBlink: false
URxvt*cursorUnderline: false
URxvt*cursorColor: #ff5733

!! tabs
!!URxvt.perl-ext-common: default,tabbed
!!URxvt.tabbed.tabbar-fg: 14
!!URxvt.tabbed.tabbar-bg: 6 
!!URxvt.tabbed.tab-fg: 14 
!!URxvt.tabbed.tab-bg: 6 

!! Perl extensions
URxvt.perl-ext-common: default,clipboard,selection-to-clipboard,pasta,matcher,keyboard-select
URxvt.keysym.M-u: perl:url-select:select_next
!! ALT-CTRL-c
URxvt.keysym.M-c: perl:clipboard:copy
!! ALT-CTRL-v
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.url-launcher: /usr/bin/chromium
URxvt.underlineURLs: True
URxvt.matcher.button: 1
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.Control-Shift-V: perl:pasta:paste
!! Comment this if you do not want copy when text is selected
URxvt.clipboard.autocopy: true

!! fonts
!URxvt*font: xft:Ricty:pixelsize=13:style=Regular:antialias=true:hinting=true, \
!xft:Sazanami Gothic:style=Gothic-Regular:pixelsize=13, \
!xft:Kochi Gothic:pixelsize=13:antialias=true;hinting=true, \
!xft:Font Awesome 5 Free Regular:pixelsie=13:style=Regular, \
!xft:Font Awesome 5 Free Solid:pixelsize=13:style=Solid, \
!URxvt*boldFont: xft:Ricty:pixelsize=13:style=Bold:antialiase=true:hinting, \
URxvt*Font: xft:Inconsolata:size=13:style=Regular:antialias=true:hinting=true, \
xft:Font Awesome 5 Free:size=13:style=Regular:antialias=true:hinting=true, \
xft:Kochi Gothic:size=13:style=Regular:antialias=true:hinting=true, \
xft:Dejavu Sans Mono:size=15:style=Regular:antialias=true
URxvt*boldFont: xft:Inconsolata:size=15:style=Bold:antialias=true:hinting=true, \
xft:Dejavu Sans Mono:size=13:style=Bold:antialias=true
!URxvt.letterSpace: -4

