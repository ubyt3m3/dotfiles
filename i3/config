##========================================
# Custome keybindings:
##========================================
bindsym $mod+Shift+w exec "VBoxManage startvm win7vb" workspace $ws0;move workspace to output DVI-I-3 

## Power Management
mode "power" {
        # Current session (e) exit, (l) lock, (r) reboot/shutdown -r now, (p) poweroff/shutdown -h now
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        #bindsym l exec --no-startup-id i3lock, mode "default"
        bindsym l exec --no-startup-id $HOME/Scripts/i3lock/lock_blur_i3.sh, mode "default"
        bindsym r exec --no-startup-id sudo /sbin/shutdown -r now, mode "default"
        bindsym p exec --no-startup-id sudo /sbin/shutdown -h now, mode "default"

        # Back to default settings
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Pause mode "power"


